@{
    ViewBag.Title = "Movies";
}


@*@Html.Action("Welcome")*@
@{ 
    Html.RenderAction("Welcome");
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "Movies", FormMethod.Get))
{

 <table class="table">
    <tr>
        <td style="width:20%;">
        Production Year:</td>
        <td>@Html.DropDownList("YearId", Model.Years,"--All--", new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.Button("Filter","btn btn-primary")
        </td>
    </tr>
 </table>
}
<a href="~/Movies/Add">Add Movie</a>
<br />
<label class="text-success">@TempData["Info"]</label>
